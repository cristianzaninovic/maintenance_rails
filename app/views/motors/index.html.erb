<p style="color: green"><%= notice %></p>
<h1>Motors</h1>
<div class="px-2">
  <%= form_tag(motors_path, :method=>:get) do %>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", class: "btn btn-tuiter py-2" %>
  <% end %>
</div>  
<div class="py-3"><%= pagy_bootstrap_nav(@pagy).html_safe %></div>
<div id="motors" class="card-deck">
  <div class="row row-cols-1 row-cols-md-4 g-4">
    <% @motors.each do |motor| %>
      <%= render partial: 'motor_index', locals: {motor: motor} %>      
    <% end %>
  </div>
</div>
<div class="py-3"><%= pagy_bootstrap_nav(@pagy).html_safe %></div>
<%= link_to "New motor", new_motor_path, class: 'btn btn-outline-success' %>
