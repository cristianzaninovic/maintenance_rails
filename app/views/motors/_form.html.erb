<%= simple_form_for @motor do |form| %>
  <%= form.error_notification %>
  <%= form.error_notification message: form.object.errors[:base].to_sentence if form.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= form.input :name %>
    <%= form.input :description %>    
    <%= form.input :motor_class, collection: Motor.motor_classes.keys, include_blank: false, prompt: "select..."  %>
  </div>

  <div class="form-actions">
    <%= form.button :submit, class: 'btn btn-outline-primary ' %>  
  </div>  
<% end %>
